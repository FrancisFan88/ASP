@*model IEnumerable<PCShop.Models.Product>*@
@model PCShop.ViewModels.ProductListVM
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>PC Shop's Catalogue</title>
</head>
<body>
    @*<h1>@ViewBag.SelectedCategory</h1>*@
    <h1>@Model.SelectedCategoryName</h1>
    @foreach (var product in Model.Products)
    {
        <h2>@product.ProductId</h2>
        <h2>@product.ProductName</h2>
        <h3>@product.Category.Name</h3>
        <b>@product.ProductDescription</b>
        <hr />
    }
</body>
</html> 